<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/pic"
        android:src="@drawable/loadpic"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/D_title"
        android:text="苏泊尔保温杯 男女士304不锈钢真空水杯学生直身便携大容量茶杯子"
        android:layout_marginStart="3dp"
        android:layout_below="@+id/pic"
        android:maxLines="1"
        android:textColor="@color/black"
        android:ellipsize="end"
        android:textSize="14sp"
        android:paddingLeft="1dp"
        android:paddingRight="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:allowUndo="false" />

    <LinearLayout
        android:id="@+id/info_rv"
        android:orientation="horizontal"
        android:layout_marginStart="4dp"
        android:gravity="center_vertical"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/D_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/biaozhi"
            android:src="@drawable/taobao"
            android:layout_marginStart="2dp"
            android:layout_width="15dp"
            android:layout_height="17dp" />

        <TextView
            android:text="销量"
            android:layout_marginStart="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/sales"
            android:text="1000"
            android:layout_marginStart="4dp"
            android:textSize="12sp"
            android:textColor="#8cbfca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:text="券"
            android:layout_marginStart="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/coupon_value"
            android:textSize="12sp"
            android:text="1000"
            android:layout_marginStart="4dp"
            android:textColor="#FF435E"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="元"
            android:layout_marginStart="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginStart="3dp"
        android:layout_below="@+id/info_rv"
        android:paddingBottom="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

